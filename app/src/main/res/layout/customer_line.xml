<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:drawable/editbox_dropdown_light_frame"
    android:backgroundTint="#F4D8AE">

    <LinearLayout
        android:id="@+id/customerLine_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/customerLine_tvCustomerCode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@android:drawable/editbox_background_normal"
                android:gravity="center|start"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/customerLine_tvFName"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:background="@android:drawable/editbox_background_normal"
                android:gravity="center|start"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/customerLine_tvLName"
                android:layout_width="173dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:background="@android:drawable/editbox_background_normal"
                android:gravity="center|start"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/customerLine_tvEmail"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:background="@android:drawable/editbox_background_normal"
                android:gravity="center|start"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/customerLine_tvPassword"
                android:layout_width="175dp"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:background="@android:drawable/editbox_background_normal"
                android:gravity="center|start"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>