<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:drawable/editbox_dropdown_light_frame"
    android:backgroundTint="#E8EAD2">

    <LinearLayout
        android:id="@+id/company_LLline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/companyLine_tvComCode"
                android:layout_width="101dp"
                android:layout_height="58dp"
                android:layout_marginStart="8dp"
                android:background="@android:drawable/editbox_background_normal"
                android:gravity="center|start"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/companyLine_tvComName"
                android:layout_width="285dp"
                android:layout_height="58dp"
                android:layout_marginStart="8dp"
                android:background="@android:drawable/editbox_background_normal"
                android:gravity="center|start"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/companyLine_tvComMail"
                android:layout_width="205dp"
                android:layout_height="58dp"
                android:layout_marginStart="8dp"
                android:background="@android:drawable/editbox_background_normal"
                android:gravity="center|start"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/companyLine_tvComPassword"
                android:layout_width="174dp"
                android:layout_height="58dp"
                android:layout_marginStart="8dp"
                android:background="@android:drawable/editbox_background_normal"
                android:gravity="center|start"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
