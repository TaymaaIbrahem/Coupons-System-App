<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/couponLine_layout"
        android:layout_width="375dp"
        android:layout_height="196dp"
        android:background="@drawable/border"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/couponLine_image"
                android:layout_width="111dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/image_icon" />

            <TextView
                android:id="@+id/couponLine_tvID"
                android:layout_width="114dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:drawable/editbox_background_normal"
                android:gravity="center|start"
                android:text="id"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/copunLine_tvCompanyID"
                android:layout_width="114dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:drawable/editbox_background_normal"
                android:gravity="center|start"
                android:text="companyID"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/copunLine_tvAmount"
                android:layout_width="114dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:drawable/editbox_background_normal"
                android:gravity="center|start"
                android:text="amount"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/copunLine_tvStartDate"
                android:layout_width="114dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:drawable/editbox_background_normal"
                android:gravity="center|start"
                android:text="startDate"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/copunLine_tvEndDate"
                android:layout_width="114dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:drawable/editbox_background_normal"
                android:gravity="center|start"
                android:text="endDate"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/copunLine_tvPrice"
                android:layout_width="114dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:drawable/editbox_background_normal"
                android:gravity="center|start"
                android:text="price"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/copunLine_tvTitle"
                android:layout_width="114dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:drawable/editbox_background_normal"
                android:gravity="center|start"
                android:text="title"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/copunLine_tvCategory"
                android:layout_width="114dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:drawable/editbox_background_normal"
                android:gravity="center|start"
                android:text="category"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/copunLine_tvDescription"
                android:layout_width="114dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:drawable/editbox_background_normal"
                android:gravity="center|start"
                android:text="Description"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>